{
  "name": "user-api-crud",
  "version": "0.0.1",
  "description": "Basic users crud",
  "main": "index.js",
  "scripts": {
    "dev": "npm run migrations-dev && npx dotenv -e ./.env.development -- npx ts-node-dev ./src/main.ts",
    "test": "npm run docker-test-up && npm run migrate-test && jest --coverage --watchAll && npm run docker-test-down",
    "build": "npx tsc --build",
    "migrations-dev": "npx sequelize db:migrate --env development",
    "migrate-test": "npx sequelize db:migrate --env test",
    "docker-test-up": "docker compose -f ./docker/docker-compose-test.yml up -d && ./scripts/ensure-mysql.sh",
    "docker-test-down": "docker compose -f ./docker/docker-compose-test.yml down"
  },
  "keywords": [
    "api",
    "express-ts"
  ],
  "author": "bpa03",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.20.2",
    "dotenv": "^16.1.4",
    "dotenv-cli": "^7.2.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "http-status-codes": "^2.2.0",
    "morgan": "^1.10.0",
    "mysql2": "^3.3.3",
    "sequelize": "^6.32.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/morgan": "^1.9.4",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.42.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.5.0",
    "sequelize-cli": "^6.6.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.3"
  }
}
